---
import CategoryShowcase from "@/components/category-showcase.astro";
import { SearchableList } from "@/components/searchable-list";

import type { Dua } from "@/types/dua";

import DUAA from "data/duaa.json";
---

<html lang="id">
  <head>
    <title>Daftar Doa</title>
  </head>
  <body class="bg-white dark:bg-black">
    <section class="p-4 md:pt-10 max-w-2xl mx-auto">
      <CategoryShowcase />
    </section>
    <section class="max-w-2xl mx-auto p-4">
      <SearchableList duas={DUAA as Dua[]} client:only="react" />
    </section>
  </body>
</html>
